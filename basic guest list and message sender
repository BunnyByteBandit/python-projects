guest_list = []

while True:
    name = input("Enter a guest's name (or type 'done' to finish): ")
    
    if name == 'done':
        break
    else:
        guest_list.append(name)

for guest in guest_list:
    message = input("Enter your message for " + guest + ": ")
    print("Sending invitation to " + guest + ": " + message)
